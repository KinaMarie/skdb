wikiname = ikiwiki
username = fenn

sudo apt-get insatll ikiwiki git-core gitweb
sudo apt-get install libtimedate-perl
sudo apt-get install libcgi-session-perl
mkdir ~/$wikiname
sudo mkdir /var/www/$wikiname
sudo chown $username /var/www/$wikiname
sudo vim apache2.conf 
#(add this stuff
#<Directory /var/www/$wikiname>
#  AllowOverride All
#  AddHandler cgi-script .cgi
#  Options ExecCGI
#</Directory>
#<Directory /pub/git/>
#  AllowOverride All
#  AddHandler cgi-script .cgi
#  Options ExecCGI
#</Directory>
sudo cp /usr/lib/cgi-bin/gitweb.cgi /pub/git
sudo /etc/init.d/apache2 restart
mkdir ~/.ikiwiki
cd ~/.ikiwiki
wget http://ikiwiki.info/ikiwiki.setup
mv ikiwiki.setup $wikiname.setup
mkdir ~/git/
mkdir ~/git/$wikiname
ikiwiki --verbose ~/$wikiname /var/www/$wikiname/ --url=http://fennetic.net/$wikiname/
ikiwiki-makerepo git ~/$wikiname/ /pub/git/$wikiname/
nano ~/$wikiname/test
ikiwiki --rebuild ~/$wikiname /var/www/$wikiname
#now your wiki should have a page http://fennetic.net/$wikiname/test

#this automates things a bit, preferences and such
nano ~/.ikiwiki/$wikiname.setup
#uncomment the cgi wrapper lines, set proper variable values, not example
ikiwiki --setup ~/.ikiwiki/$wikiname.setup 
